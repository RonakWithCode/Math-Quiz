<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlueTextColor"
    tools:context=".Fragment.GameScreenFragment"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:id="@+id/LinearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:scaleType="fitXY"
            android:src="@drawable/baseline_arrow_back_24"/>
        <TextView
            android:id="@+id/number_of_wrong"
            android:text="0/3"
            android:textColor="@color/error"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="50sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/rounded"
        android:layout_below="@id/LinearTop"
        android:text="0/10"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ChangeLayout"
        android:background="@drawable/baseline_density_small_24"
        android:layout_below="@id/LinearTop"
        android:layout_marginEnd="@dimen/_25sdp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="50sp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"/>

    <TextView
        android:id="@+id/Ques"
        android:text="54\n6"
        android:layout_below="@id/rounded"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_50ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@id/Ques"
        android:id="@+id/ans1"
        android:textSize="@dimen/_35ssp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_50ssp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        />
    <Button
        android:layout_below="@id/Ques"
        android:id="@+id/ans2"
        android:textSize="@dimen/_35ssp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50ssp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        />
    />
    <Button
        android:layout_below="@id/ans2"
        android:id="@+id/findAns"
        android:textSize="@dimen/_35ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_50ssp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="?"
        />

</RelativeLayout>